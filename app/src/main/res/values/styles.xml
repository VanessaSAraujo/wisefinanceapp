<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Fontes   -->
    <style name="InterRegular">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="InterBold">
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="InterSemiBold">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>
    
    <style name="BackgroundOne">
        <item name="android:layout_width">375dp</item>
        <item name="android:layout_height">812dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Wise">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextPurple">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/lilas</item>
    </style>

    <style name="TextD">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/cin</item>
    </style>

    <style name="Button">
        <!-- Definindo a largura e altura do botão -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Configurando as margens -->
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">-60dp</item>

        <!-- Outras propriedades do botão -->
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:padding">8dp</item> <!-- Reduzindo o padding para aumentar a área de toque -->
        <item name="android:textSize">16sp</item> <!-- Ajustando o tamanho do texto -->
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/buttononly</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>



</resources>